<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_item"
			android:layout_width="270dp"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="2dp"
				android:padding="5dp"
				android:background="#FFFFFF"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/lin_reply"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/tx_replyer"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="1dp"
							android:text="WE"
							android:textSize="14sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:singleLine="true" />
						<ImageView
							android:id="@+id/verify2"
							android:focusable="false"
							android:layout_width="15dp"
							android:layout_height="15dp"
							android:src="@drawable/ver"
							android:scaleType="fitCenter" />
					</LinearLayout>
					<TextView
						android:id="@+id/tx_reply_msg"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="3dp"
						android:text="What's up\? "
						android:textSize="12sp"
						android:textColor="#000000"
						android:singleLine="true" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/nameuser"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="2dp"
						android:paddingBottom="8dp"
						android:text="TextView"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#000000" />
					<ImageView
						android:id="@+id/verify"
						android:focusable="false"
						android:layout_width="15dp"
						android:layout_height="15dp"
						android:src="@drawable/ver"
						android:scaleType="fitCenter" />
				</LinearLayout>
				<TextView
					android:id="@+id/tx_message"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="5dp"
					android:text="What is happening\? "
					android:textSize="16sp"
					android:textColor="#000000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/l_voice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="2dp"
				android:padding="5dp"
				android:background="#FFFFFF"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/im_play"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="5dp"
					android:src="@drawable/ic_play_arrow_white"
					android:scaleType="center" />
				<SeekBar
					android:id="@+id/seekbar1"
					android:focusable="false"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:padding="8dp" />
				<TextView
					android:id="@+id/tx_voice_name"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="02:30"
					android:textSize="14sp"
					android:textColor="#000000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="260dp"
				android:layout_height="wrap_content"
				android:background="#FFAB91"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/thumbs"
					android:focusable="false"
					android:layout_width="250dp"
					android:layout_height="150dp"
					android:layout_marginLeft="5dp"
					android:layout_marginTop="2dp"
					android:layout_marginRight="5dp"
					android:layout_marginBottom="1dp"
					android:padding="1dp"
					android:background="#FFFFFF"
					android:src="@drawable/default_image"
					android:scaleType="center" />
				<TextView
					android:id="@+id/videotext"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TextView"
					android:textSize="16sp"
					android:textColor="#000000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="190dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:background="#FFAB91"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview1"
					android:focusable="false"
					android:layout_width="180dp"
					android:layout_height="210dp"
					android:layout_marginLeft="5dp"
					android:layout_marginTop="2dp"
					android:layout_marginRight="5dp"
					android:layout_marginBottom="2dp"
					android:padding="1dp"
					android:background="#FFFFFF"
					android:src="@drawable/default_image"
					android:scaleType="center" />
				<TextView
					android:id="@+id/imagetext"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TextView"
					android:textSize="16sp"
					android:textColor="#000000" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
